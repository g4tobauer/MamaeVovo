<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefaultRadioButton" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:alpha">@android:integer/config_shortAnimTime</item>
    </style>

    <style name="DefaultTextTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">.9</item>
    </style>

    <style name="DefaultTextEdit" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">.9</item>
    </style>

    <style name="DefaultButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:alpha">.9</item>
    </style>

</resources>
