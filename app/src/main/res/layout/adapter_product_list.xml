<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/text_size_10"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tx_product_list_adapter_description"
        style="@style/DefaultTextAdapter"
        android:text="Marmita 13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tx_product_list_adapter_price"
            style="@style/DefaultTextAdapter"
            android:layout_width="wrap_content"
            android:textAlignment="textStart"
            android:layout_weight="0"
            android:text="R$ 13,00" />
        <TextView
            android:id="@+id/tx_product_list_adapter_unit"
            style="@style/DefaultTextAdapter"
            android:layout_width="match_parent"
            android:textAlignment="textEnd"
            android:layout_weight="0"
            android:text="UN" />
    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>